@{
    ViewData["Title"] = "Home Page";
}

@if (!this.User.Identity.IsAuthenticated)
{
    <div class="bg-eventures">
        <h1>Eventures - The best ticket services in the world. </h1>
        <hr class="hr-2 bg-dark" />
        <h3><a href="/Identity/Account/Login">Login</a> to start "eventing".</h3>
        <h3><a href="/Identity/Account/Register">Register</a> if you don't have an account.</h3>
    </div>
}
else
{
    if (this.User.IsInRole("Admin"))
    {
        
        <div class="bg-eventures">
            <h1>Administrator, @this.User.Identity.Name ! </h1>
            <hr class="hr-2 bg-dark" />
            <h3 class="mt-4 text-faded">Enjoy work ;).</h3>
        </div>
    }
    else
    {
        <div class="bg-eventures">
            <h1>Wellcome, @this.User.Identity.Name ! </h1>
            <hr class="hr-2 bg-dark" />
            <h3 class="mt-4 text-faded">Eventures wish you an exciting experience.</h3>
        </div>   
    }
}
