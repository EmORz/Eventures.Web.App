@model Eventures.Models.BindingModels.EventCreateBindingModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mt-3">Create</h1>
<hr class="mt-3 bg-eventures hr-2" />
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group w-45">

        <label asp-for="Name" class="font-weight-bold"></label>
        <input asp-for="Name" class="form-control" type="text" placeholder="Username ..." />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group w-45">

        <label asp-for="Place" class="font-weight-bold"></label>
        <input asp-for="Place" class="form-control" type="text" placeholder="Place ..." />
        <span asp-validation-for="Place" class="text-danger"></span>
    </div>
    <div class="form-group w-45">

        <label asp-for="Start" class="font-weight-bold"></label>
        <input asp-for="Start" class="form-control" type="datetime-local" placeholder="Start ..." />
        <span asp-validation-for="Start" class="text-danger"></span>
    </div>
    <div class="form-group w-45">

        <label asp-for="End" class="font-weight-bold"></label>
        <input asp-for="End" class="form-control" type="datetime-local" placeholder="End ..." />
        <span asp-validation-for="End" class="text-danger"></span>
    </div>
    <div class="form-group w-45">

        <label asp-for="TotalTickets" class="font-weight-bold"></label>
        <input asp-for="TotalTickets" class="form-control" type="number" placeholder="Total tickets ..." />
        <span asp-validation-for="TotalTickets" class="text-danger"></span>
    </div>
    <div class="form-group w-45">

        <label asp-for="PricePerTicket" class="font-weight-bold"></label>
        <input asp-for="PricePerTicket" class="form-control" type="number" step="any" placeholder="Price for tickets ..." />
        <span asp-validation-for="PricePerTicket" class="text-danger"></span>
    </div>
  
    <hr class="mt-3 bg-eventures hr-2" />
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn bg-eventures">Create</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
